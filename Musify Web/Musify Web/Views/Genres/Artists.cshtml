@model Musify_Web.Models.Genre

@{
    ViewBag.Title = "Artists";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Html.DisplayFor(model => model.Name) Genre</h2>
<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            <input type="text" id="searchBar" onkeyup="searchItem()" placeholder="Search for @Html.DisplayFor(model => model.Name) Artist ..">
        </div>
    </div>
    <div class="col-lg-12">
        <table class="table table-striped table-hover " id="indexTbl">
            <thead>
            <tr>
                <th>Name</th>
                <th>Image URL</th>
                <th>Biography</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Artists)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.ImageBigUrl)</td>
                    <td>@Html.DisplayFor(modelItem => item.Biography)</td>
                </tr>
            }

            </tbody>
        </table>
    </div>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
