@model Musify_Web.Models.Genre

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" _lpchecked="1">
        <fieldset>
            <legend>Legend</legend>
            <div class="form-group">
                <label for="inputName" class="col-lg-2 control-label">Name</label>
                <div class="col-lg-10">
                    
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @id = "inputName", @placeholder = "Genre Name", @type = "text" })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>
            <div class="form-group">
                <label for="inputDescription" class="col-lg-2 control-label">Description</label>
                <div class="col-lg-10">

                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @id = "inputDescription", @placeholder = "Genre Description" })
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>
            <div class="form-group">
                <label for="inputImage" class="col-lg-2 control-label">Image URL</label>
                <div class="col-lg-10">

                    @Html.TextBoxFor(model => model.ImageUrl, new { @class = "form-control", @id = "inputImage", @placeholder = "Genre Image URL", @type = "text" })
                    @Html.ValidationMessageFor(model => model.ImageUrl)
                </div>
            </div>
            <div class="form-group">
                <label for="inputPublic" class="col-lg-2 control-label">Visible for Public?</label>
                <div class="col-lg-10">
                    <input type="checkbox" id="inputPublic">
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </fieldset>
    </div>

}

