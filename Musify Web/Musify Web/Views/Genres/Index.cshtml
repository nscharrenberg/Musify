@model IEnumerable<Musify_Web.Models.Genre>

@{
    ViewBag.Title = "Genres";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Genres</h2>

<div class="row">
    <div class="col-lg-12">
        <p><a href="@Url.Action("Create", "Genres")" class="btn btn-primary btn-block btn-lg">Add Genre</a></p>
    </div>
    <div class="col-lg-12">
        <div class="form-group">
            <input type="text" id="searchBar" onkeyup="searchItem()" placeholder="Search for Artist..">
        </div>
    </div>
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-striped table-hover" id="indexTbl">
                <thead>
                <tr class="info">
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ImageUrl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedAt)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UpdatedAt)
                    </th>
                    <th>
                        Actions
                    </th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr class="@(item.Public == true ? "success" : "danger")">
                        <td class="clickable-row" data-href="@Url.Action("Artists", new {id = item.Id})">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="clickable-row" data-href="@Url.Action("Artists", new {id = item.Id})">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="clickable-row" data-href="@Url.Action("Artists", new {id = item.Id})">
                            @Html.DisplayFor(modelItem => item.ImageUrl)
                        </td>
                        <td class="clickable-row" data-href="@Url.Action("Artists", new {id = item.Id})">
                            @Html.DisplayFor(modelItem => item.CreatedAt)
                        </td>

                        <td class="clickable-row" data-href="@Url.Action("Artists", new {id = item.Id})">
                            @if (item.UpdatedAt != item.CreatedAt)
                            {
                                @Html.DisplayFor(modelItem => item.UpdatedAt)
                            }
                            else
                            {
                                @:-
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "Genres", new {id = item.Id})" class="btn btn-warning">Edit</a>
                        </td>

                        <td>
                            @if (item.Public != true)
                            {
                                <a href="@Url.Action("Delete", "Genres", new {id = item.Id})" class="btn btn-danger">Delete</a>
                            }
                        </td>

                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
