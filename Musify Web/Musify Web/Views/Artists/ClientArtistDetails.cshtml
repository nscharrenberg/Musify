@model Musify_Web.Models.Artist

@{
    ViewBag.Title = "ClientArtistDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1></h1>

<div class="row">
    <div class="col-xs-6 col-sm-4 col-md-4 col-lg-3">
        <div class="media-object" style="max-width: 450px;">
            <div class="react-contextmenu-wrapper">
                <a class="cover-art shadow light">
                    <div>
                        <div class="cover-art-image cover-art-image-loaded" style="background-image: url(@Html.DisplayTextFor(model => model.ImageBigUrl));"></div>
                    </div>
                </a>
            </div>
        </div>
    </div>
    <div class="col-xs-6 col-sm-8 col-md-8 col-lg-9">
        <h1>@Model.Name</h1>
        <p>@Model.Biography</p>
    </div>
    
    
</div>




@Html.Partial("ClientAlbumsOverview")

<hr />

@Html.Partial("ClientArtistGenresOverview")
