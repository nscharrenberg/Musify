@using System.Activities.Statements
@model Musify_Web.Models.ViewModel.ArtistViewModel

@{
    ViewBag.Title = "EditGenres";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" _lpchecked="1">
        <fieldset>
            <br />
            <h1>Add Genre to <span class="text-primary">@Model.Artist.Name</span></h1>
            <hr />
            <div class="form-group">
                <label for="inputName" class="col-lg-2 control-label">Genre</label>
                <div class="col-lg-10">
                    @Html.DropDownListFor(model => model.SelecterGenre, Model.Genres, new {@class = "selectpicker", data_live_search = "true", data_style = "btn-primary"})
                    @Html.HiddenFor(x => x.Artist.Id)
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    @Html.AntiForgeryToken()
                    @Html.ActionLink("Cancel", "Genres", "Artists", new { id = Model.Artist.Id }, new { @class = "btn btn-default" })
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </fieldset>
    </div>
}
