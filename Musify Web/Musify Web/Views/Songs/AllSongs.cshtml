@model IEnumerable<Musify_Web.Models.Song>

@{
    ViewBag.Title = "Songs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Songs</h2>
<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            <input type="text" id="searchBar" onkeyup="searchItem()" placeholder="Search for Artist..">
        </div>
    </div>
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-striped table-hover" id="indexTbl">
                <thead>
                <tr class="info">
                    <th>
                        Name
                    </th>
                    <th>
                        Position
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        Artist
                    </th>
                    <th>
                        Created At
                    </th>
                    <th>
                        Last Updated
                    </th>
                    <th>
                        Actions
                    </th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="clickable-row" data-href="@Url.Action("Details", new {id = item.Id})">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>

                        <td class="clickable-row" data-href="@Url.Action("Details", new {id = item.Id})">
                            @Html.DisplayFor(modelItem => item.Number)
                        </td>
                        <td class="clickable-row" data-href="@Url.Action("Details", new {id = item.Id})">
                            @Html.DisplayFor(modelItem => item.Duration)
                        </td>
                        
                        <td class="clickable-row" data-href="@Url.Action("Details", new {id = item.Id})">
                            @Html.DisplayFor(modelItem => item.Created)
                        </td>

                        <td class="clickable-row" data-href="@Url.Action("Details", new {id = item.Id})">
                            @if (item.Updated != item.Created)
                            {
                                @Html.DisplayFor(modelItem => item.Updated)
                            }
                            else
                            {
                                @:-
                            }
                        </td>
                        <td>
                            @foreach (var artist in item.Artists)
                            {
                                if (artist != null)
                                {
                                    @artist.Name
                                }
                                else
                                {
                                    @: & 
                                }

                            }
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "Artists", new {id = item.Id})" class="btn btn-warning">Edit</a>
                        </td>

                        <td>
                            <a href="@Url.Action("Delete", "Artists", new {id = item.Id})" class="btn btn-danger">Delete</a>
                        </td>

                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
