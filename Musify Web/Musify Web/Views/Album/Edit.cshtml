@model Musify_Web.Models.Album

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal" _lpchecked="1">
        <fieldset>
            <legend>Legend</legend>
            <div class="form-group">
                <label for="inputName" class="col-lg-2 control-label">Name</label>
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.Name, new {@class = "form-control", @id = "inputName"})
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>
            <div class="form-group">
                <label for="inputDate" class="col-lg-2 control-label">Release Date</label>
                <div class="col-lg-10">

                    @Html.TextBoxFor(model => model.ReleaseDate, new {@class = "form-control", @id = "inputDate"})
                    @Html.ValidationMessageFor(model => model.ReleaseDate)
                </div>
            </div>
            <div class="form-group">
                <label for="inputImage" class="col-lg-2 control-label">Image</label>
                <div class="col-lg-10">

                    @Html.TextBoxFor(model => model.ImageBigUrl, new {@class = "form-control", @id = "inputImage"})
                    @Html.ValidationMessageFor(model => model.ImageBigUrl)
                </div>
            </div>
            <div class="form-group">
                <label for="inputThumbnail" class="col-lg-2 control-label">Thumbnail</label>
                <div class="col-lg-10">

                    @Html.TextBoxFor(model => model.ImageSmallUrl, new {@class = "form-control", @id = "inputThumbnail"})
                    @Html.ValidationMessageFor(model => model.ImageSmallUrl)
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.Artist.Id)
                    @Html.ActionLink("Cancel", "Index", "Artists", null, new {@class = "btn btn-default"})
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </fieldset>
    </div>
}