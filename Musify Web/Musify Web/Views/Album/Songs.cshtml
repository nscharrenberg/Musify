@model Musify_Web.Models.Album

@{
    ViewBag.Title = "Albums";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Songs</h2>


<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            <a class="btn btn-primary btn-block btn-lg" href="@Url.Action("Create", "Album", new { artistId = Model.Id })">Add new Album to @Model.Name</a>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="form-group">
            <input type="text" id="searchBar" onkeyup="searchItem()" placeholder="Search for the Artists Genre..">
        </div>
    </div>
    <div class="col-lg-12">
        <table class="table table-striped table-hover" id="indexTbl">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Position</th>
                    <th>Duration</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Songs)
            {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Number)</td>
                        <td>@Html.DisplayFor(modelItem => item.Duration)</td>
                        
                        <td><a class="btn btn-warning" href="@Url.Action("Edit", "Album", new { artistId = Model.Id, albumId = item.Id })">Edit</a></td>
                        <td><a class="btn btn-danger" href="@Url.Action("Delete", "Album", new { artistId = Model.Id, albumId = item.Id })">Delete</a></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>


<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


