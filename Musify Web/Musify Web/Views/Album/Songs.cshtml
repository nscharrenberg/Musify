@model Musify_Web.Models.Album

@{
    ViewBag.Title = "Songs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            <a class="btn btn-primary btn-block btn-lg" href="@Url.Action("Create", "Songs", new { artistId = Model.Id })">Add new Album to @Model.Name</a>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="form-group">
            <input type="text" id="searchBar" onkeyup="searchItem()" placeholder="Search for the Artists Genre..">
        </div>
    </div>
    <div class="col-lg-12">
        <table class="table table-striped table-hover" id="indexTbl">
            <thead>
            <tr>
                <th>Name</th>
                <th>Position</th>
                <th>Duration</th>
                <th>Album</th>

            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Songs)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Number)</td>
                    <td>@Html.DisplayFor(modelItem => item.Duration)</td>
                    <td>@Html.DisplayFor(modelItem => Model.Name)</td>
                        
                    <td><a class="btn btn-warning" href="@Url.Action("Edit", "Songs", new { albumId = Model.Id, songId = item.Id })">Edit</a></td>
                    <td><a class="btn btn-danger" href="@Url.Action("Delete", "Songs", new { albumId = Model.Id, songId = item.Id })">Delete</a></td>
                </tr>
            }

            </tbody>
        </table>
    </div>
</div>
